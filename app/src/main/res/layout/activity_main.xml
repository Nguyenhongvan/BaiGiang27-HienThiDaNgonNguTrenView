<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vansuzy.baigiang27_hienthidangonngutrenview.MainActivity">

    <EditText
        android:id="@+id/txtMuaXuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="@string/muaxuan"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="-2dp"/>

    <EditText
        android:id="@+id/txtMuaHe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/muahe"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="41dp"/>

    <EditText
        android:id="@+id/txtMuaThu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/muathu"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="84dp"/>

    <EditText
        android:id="@+id/txtMuaDong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/muadong"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="127dp"/>
</LinearLayout>
